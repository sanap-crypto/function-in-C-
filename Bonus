Here is a programming bonus for you guys for completing the series :-

#include<conio.h>
#include<graphics.h>
#include<dos.h>
#include<stdlib.h>

void main()
{
in gd = DETECT, gm, i, x=319,y=239;
initgraph(&gd,&gm,"C://TURBOC3//BGI");
for(i=0;i<=90;i+=5)
{
circle(319,219-i,20+i);
setcolor(14);
circle(319,259-i,20+i);
setcolor(100);
circle(299-i,239,20+i);
setcolor(1);
circle(339+i,239,20+i);
setcolor(50);
delay(50);
}
closegraph();
}
